{
  "builds": [{
    "src": "backend/*.py",
    "use": "@vercel/python",
    "config": {
      "includeFiles": [
        "backend/resources/**",
        "backend/data/poetry/**",
        "backend/surname_mapping.json"
      ],
      "maxLambdaSize": "15mb",
      "runtime": "python3.9"
    }
  }],
  "routes": [{
    "src": "/api/(.*)",
    "dest": "backend/app.py",
    "methods": ["POST"]
  }]
}
